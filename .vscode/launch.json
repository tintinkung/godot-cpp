    "version": "0.2.0",
    "configurations": [
        {
            "name": "Editor MSVC",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "D:\\Godot\\Engine\\Godot_v4.2-stable_win64.exe",
            "args": [ "D:\\Godot\\Projects\\LingGame\\project.godot" ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMakeInstall",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "environment": [
                {
                    "name": "Path",
                    "value": "${env:Path};"
                }
            ],
            "visualizerFile": "${workspaceFolder}/.vscode/godot.natvis"
        },
        {
            "name": "Editor GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "D:\\Godot\\Engine\\Godot_v4.2-stable_win64.exe",
            "args": [ "D:\\Godot\\Projects\\LingGame\\project.godot" ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMakeInstall",
            "internalConsoleOptions": "openOnSessionStart",
            "environment": [
                {
                    "name": "Path",
                    "value": "${env:Path};"
                }
            ],
            "visualizerFile": "${workspaceFolder}/.vscode/godot.natvis"
        },
        {
            "name": "Launch Editor",
            "type":"cmake",
            "request": "launch",
            "cmakeDebugType": "script",
            "scriptPath": "${workspaceFolder}/cmake/editor.cmake",
            "scriptArgs": [ 
                "--program", "D:\\Godot\\Engine\\Godot_v4.2-stable_win64.exe",
                "--project", "D:\\Godot\\Projects\\LingGame"
            ],
            "preLaunchTask": "CMakeInstall",
            "internalConsoleOptions": "neverOpen",
            "postDebugTask": "ExitEditor"
        },
        {
            "name": "Game MSVC",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "D:\\Godot\\Engine\\Godot_v4.2-stable_win64.exe",
            "args": [  "--path", "D:\\Godot\\Projects\\LingGame" ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMakeInstall",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "environment": [
                {
                    "name": "Path",
                    "value": "${env:Path};"
                }
            ],
            "visualizerFile": "${workspaceFolder}/.vscode/godot.natvis"
        },
    ]
}